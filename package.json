{
  "name": "social-network-server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "dev": "concurrently \"npm:server:dev\" \"npm:client:dev\"",
    "client:dev": "vite client/",
    "client:build": "tsc && vite build client/",
    "server:build": "nest build --path server/tsconfig.json --config server/nest-cli.json",
    "server:start": "nest start --path server/tsconfig.json --config server/nest-cli.json",
    "server:dev": "nest start --watch --path server/tsconfig.json --config server/nest-cli.json",
    "server:start:prod": "node dist/main",
    "database:start:mysql": "docker run -d -p 3306:3306 --name social-network-mysql --platform linux/x86_64 -e MYSQL_ROOT_PASSWORD=eee -e MYSQL_DATABASE=social -e MYSQL_USER=social -e MYSQL_PASSWORD=social mysql:5.7",
    "database:migration:generate": "npm run typeorm -- migration:generate --connection  --name",
    "database:migration:run": "npm run typeorm -- migration:run -t=false",
    "database:schema:drop": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -f server/src/ormconfig.ts schema:drop",
    "typeorm": "ts-node --project tsconfig.json ./node_modules/.bin/typeorm --config server/src/ormconfig.ts"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^1.2.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/passport": "^8.2.1",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/typeorm": "^8.0.3",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "concurrently": "^7.0.0",
    "cookie-parser": "^1.4.6",
    "date-fns": "^2.28.0",
    "mysql2": "^2.3.3",
    "npm-run-all": "^4.1.5",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "typeorm": "^0.2.45",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.4.1",
    "@types/node": "^16.0.0",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vitejs/plugin-react": "^1.0.7",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.5.4",
    "vite": "^2.8.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
